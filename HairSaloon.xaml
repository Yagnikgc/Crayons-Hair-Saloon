<Window x:Class="Crayons_Hair_Saloon.HairSaloon"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Crayons_Hair_Saloon"
        mc:Ignorable="d"
        Title="HairSaloon" Height="450" Width="800">
    <Grid>
        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="Padding" Value="6,6"/>
                <Setter Property="FontFamily" Value="Cambria Math"/>
            </Style>
        </Grid.Resources>
        <Grid.Background>
            <ImageBrush ImageSource="b4.jpg"/>
        </Grid.Background>
        <Button Name="btn_bookApt" Content="Book an Appointment" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="162,126,0,0" Click="Btn_bookApt_Click"/>
        <Button Name="btn_showApt" Content="Veiw booked Appointments" HorizontalAlignment="Left" Margin="440,126,0,0" VerticalAlignment="Top" Click="Btn_showApt_Click"/>
        <Button Content="Log Out" HorizontalAlignment="Left" Margin="534,290,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
    </Grid>
</Window>
